<div class="row">
  <%= render ExMoney.SharedView, "settings_navbar.html", conn: @conn, navigation: @navigation %>

  <div class="col-sm-9 col-sm-offset-3 col-md-6 col-md-offset-2 main">
    <h2>New rule</h2>

    <%= render "form.html",
      changeset: @changeset,
      accounts: @accounts,
      target: @target,
      conn: @conn,
      type: @type,
      action: settings_rule_path(@conn, :create) %>

    <%= link "Back", to: settings_rule_path(@conn, :index) %>
  </div>
</div>
