<div class="pages">
  <div class="page navbar-fixed" data-page="new-favourite-transaction-screen">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="left">
          <a href="/m/dashboard" class="link back" id="new_favourite_transaction_back">
            <i class="icon icon-back"></i>&nbsp; Back
          </a>
        </div>
        <div class="center">New favourite transaction</div>
      </div>
    </div>
    <div class="page-content">
      <div class="list-block reduced-margin">
        <%= form_for @changeset, mobile_favourite_transaction_path(@conn, :create), [method: :post, class: "ajax-submit"], fn f -> %>
          <ul>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title label">Name</div>
                  <div class="item-input">
                    <%= text_input(f, :name, placeholder: "Name", style: "text-align: right") %>
                  </div>
                </div>
              </div>
            </li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-input">
                    <p class="buttons-row">
                      <a href="#" id="expense-button" class="button button active">Expense</a>
                      <a href="#" id="income-button" class="button button">Income</a>
                    </p>
                    <%= hidden_input(f, :type, value: "expense") %>
                  </div>
                </div>
              </div>
            </li>
            <li>
              <a href="#" class="item-link smart-select" data-back-on-select="true" data-open-in="picker">
                <%= select(f, :account_id, @accounts) %>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Account</div>
                  </div>
                </div>
              </a>
            </li>
            <li>
              <a href="#" class="item-link smart-select smart-category-select" data-back-on-select="true" data-open-in="popup" data-searchbar="true" data-page-title="Choose Category">
                <%= render "categories_list.html", categories: @categories, selected: nil %>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-title">Category</div>
                  </div>
                </div>
              </a>
            </li>
            <li>
              <div class="item-content">
                <div class="item-inner">
                  <div class="item-title label">Note</div>
                  <div class="item-input">
                    <%= text_input(f, :description, placeholder: "Note", style: "text-align: right") %>
                  </div>
                </div>
              </div>
            </li>
          </ul>

          <div class="content-block">
            <div class="row">
              <div class="col-25"></div>
              <div class="col-50" align="center">
                  <button class="button active button-big" type="submit">Add</button>
              </div>
              <div class="col-25"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
